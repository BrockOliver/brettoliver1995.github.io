{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "",
  "data": {"url": "data/polis_filtered.csv"},
  "width": {"step": 12},
  "mark": "bar",
  "encoding": {
    "column": {
      "field": "year", "type": "ordinal", "spacing": 5,
      "header": {"orient": "bottom"}
    },
    "y": {
      "field": "days",
      "type": "quantitative",
      "title": "Total Elk Hunting Days",
      "axis": {"grid": true}
    },
    "x": {
      "field": "residency",
      "type": "ordinal",
      "axis": null
    },
    "color": {
      "field": "residency",
      "scale": {"range": ["#675193", "#ca8861"]}
    }
  },
  "config": {
    "view": {"stroke": "transparent"},
    "axis": {"domainWidth": 1}
  }
}


